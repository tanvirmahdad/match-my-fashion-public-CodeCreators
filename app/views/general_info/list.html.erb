<% if @general_infos.blank? %>
  <p>There are not any general infos currently in the system.</p>
<% else %>
  <p>These are the current general infos in our system</p>
  <ul id="generalinfos">
    <% @general_infos.each do |c| %>
      <li>
        <%= link_to c.first_name, {:action => 'show', :id => c.id} %>
      </li>
    <% end %>
  </ul>
<% end %>
<p>
  <%= link_to "Add new Profile", {:action => 'new' } %>
</p>
